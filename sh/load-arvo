#!/usr/bin/env bash

set -ex

test $# -eq 1

ship=$1

# Is a running ship
test -d $ship/.urb
test -f $ship/.vere.lock

herb $ship -p hood -d '+hood/autoload |'

herb $ship -p hood -d "+hood/mount %"

arvo=$(nix-build nix/pkgs -A arvo --no-out-link)

rsync -zr --delete $arvo/ $ship/home

herb $ship -p hood -d "+hood/commit %home"
